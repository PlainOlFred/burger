{{!-- 
* Setup the `index.handlebars` to have the template that Handlebars can render onto.

* Create a button in `index.handlebars` that will submit the user input into the database. --}}

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-8">
      {{!-- Image --}}
      {{!-- <img src="..." class="img-fluid" alt="Responsive image"> --}}
    </div>
  </div>
  
  <div class="row justify-content-md-center">
    <div class="col-md-4">
      {{!-- Title --}}
      <h1 class="mb-5">Eat-Da-Burger</h1>    
    </div>
  </div>

  <div class="row justify-content-md-center">
    {{!-- Burger Display --}}
    <div class="col-md-4">
      <h3 class="text-center">Burgers to Devour</h3>
      <ul class="list-group mb-5">
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              <p>
              {{this.id}}. {{burger_name}}
              <button class="devour-burger-btn" data-id={{this.id}} data-devoured={{this.devoured}}>Devour</button>
              </p>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-4">
      <h3 class="text-center">Burgers Devoured</h3>
      <ul class="list-group mb-5">
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{burger_name}}
            </li>
          {{/if}}
        {{/each}}
        
      </ul>
    </div>
  </div>

  <div class="row justify-content-md-center">
    <div class="col-md-4">
      {{!-- Form: Text Box and Button  --}}
      <form action="/api/burgers/create" method="POST" id="burger-form">
        <div class="brugerForm">
          <input type="text" class="burgeForm" name="burger_input" id="burger_input">
          <button type="submit" class="btn btn-primary">Add</button>
        </div>
      </form>

    </div>
  </div>

  <div class="row justify-content-md-center">
    <div class="col-md-4">
      {{!-- Instructions--}}
      <p>Use Input box to add Burger to "Burgers to Devour" list</p>
      <p>Click Devour to add Burger to "Burgers Devoured" list</p>
     
        

    </div>
  </div>
</div>









